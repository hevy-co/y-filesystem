{
  "name": "y-filesystem",
  "version": "1.0.0",
  "description": "Filesystem database adapter for Yjs",
  "type": "module",
  "main": "./src/y-filesystem.js",
  "module": "./src/y-filesystem.js",
  "types": "./dist/src/y-filesystem.d.ts",
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist",
    "test": "npm run lint",
    "lint": "markdownlint README.md && tsc",
    "preversion": "npm run clean && npm run lint && npm run dist",
    "debug": "concurrently 'rollup -wc' 'http-server -o .'"
  },
  "files": [
    "dist/*",
    "src/*"
  ],
  "standard": {
    "ignore": [
      "/dist",
      "/node_modules",
      "/docs"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjs/y-indexeddb.git"
  },
  "keywords": [
    "Yjs",
    "CRDT",
    "offline",
    "shared editing",
    "collaboration",
    "concurrency"
  ],
  "author": "Matthew Olenik <matt@hevy.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hevy-co/y-filesystem/issues"
  },
  "homepage": "https://yjs.dev",
  "dependencies": {
    "@types/node": "^14.0.14",
    "lib0": "^0.2.30",
    "node": "^14.4.0",
    "y-protocols": "^1.0.0",
    "yjs": "^13.2.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "fuse-box": "^4.0.0-next.439",
    "http-server": "^0.12.1",
    "jsdoc": "^3.6.3",
    "markdownlint-cli": "^0.23.1",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {
    "yjs": "^13.2.0"
  }
}
